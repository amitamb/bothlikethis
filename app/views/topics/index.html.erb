<h1>Listing topics</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Time to show</th>
  </tr>

<% for topic in @topics %>
  <tr>
    <td><%=h topic.name %></td>
    <td><%=h topic.description %></td>
    <td><%=h topic.image_url %></td>
    <td><%=h topic.image_attribution_text %></td>
    <td><%=h topic.time_to_show %></td>
    <td><%= link_to 'Show', topic %></td>
    <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
    <td><%= link_to 'Destroy', topic, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New topic', new_topic_path %>
