<h1>Editing opinion</h1>

<% form_for(@opinion) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :like %><br />
    <%= f.check_box :like %>
  </p>
  <p>
    <%= f.label :action_type %><br />
    <%= f.text_field :action_type %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @opinion %> |
<%= link_to 'Back', opinions_path %>
